<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="tech.redroma.yoching.fragments.SettingsFragment">


    <ImageView
            android:id="@+id/galactic_background"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/galaxy_white_transparent"
    />

    <ScrollView
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp">

            <TextView
                    android:id="@+id/throwing_style"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_width="wrap_content"
                    android:text="@string/settings_throwing_style"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
            />

            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:id="@+id/true_player_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/true_player"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_true_player"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/true_player_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_true_player_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/true_player_checkmark"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        app:srcCompat="@drawable/yo_check"
                        android:contentDescription="@string/checkmark_description" />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="true"
                    android:clipToPadding="true"
                    android:id="@+id/tap_that_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/tap_that"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_tap_that"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/tap_that_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_tap_that_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/tap_that_checkmark"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        app:srcCompat="@drawable/yo_check"
                        android:contentDescription="@string/checkmark_description" />

            </LinearLayout>


            <TextView
                    android:id="@+id/change_style"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:text="@string/settings_change_style"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:textStyle="bold"
            />

            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/street_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/street"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_street_style"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/street_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_street_style_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/street_checkmark"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        app:srcCompat="@drawable/yo_check"
                        android:contentDescription="@string/checkmark_description" />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/slick_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/slick"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_slick_style"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/slick_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_slick_style_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/slick_checkmark"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="30dp"
                        app:srcCompat="@drawable/yo_check"
                        android:contentDescription="@string/checkmark_description" />

            </LinearLayout>

            <TextView
                    android:id="@+id/whats_up"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="32dp"
                    android:layout_width="wrap_content"
                    android:text="@string/settings_whats_up"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textSize="26sp"
                    android:textStyle="bold"
            />

            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/buy_the_book_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/buy_the_book"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_buy_the_book"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/buy_the_book_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_buy_the_book_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/buy_the_book_arrow"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        app:srcCompat="@drawable/arrow_right"
                        android:contentDescription="@string/right_arrow_description" />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/yo_app_players_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/yo_app_players"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_yo_app_players"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/yo_app_players_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_yo_app_players_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/yo_app_players_arrow"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        app:srcCompat="@drawable/arrow_right"
                        android:contentDescription="@string/right_arrow_description" />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/learn_yo_ching_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingEnd="24dp"
                    android:paddingLeft="24dp"
                    android:paddingRight="24dp"
                    android:paddingStart="24dp"
                    android:paddingTop="8dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/learn_yo_ching"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/settings_learn_yo_ching"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/learn_yo_ching_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/settings_learn_yo_ching_description"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="12sp"
                    />

                </LinearLayout>

                <ImageView
                        android:id="@+id/learn_yo_ching_arrow"
                        android:layout_gravity="center_vertical"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_width="40dp"
                        app:srcCompat="@drawable/arrow_right"
                        android:contentDescription="@string/right_arrow_description" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
