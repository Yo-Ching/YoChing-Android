<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="tech.redroma.yoching.activities.YoActivity">

    <android.support.v7.widget.Toolbar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:id="@+id/action_toolbar"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:id="@+id/yo_action_bar_title"
                android:text="@string/placeholder_wrexagram_number"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:paddingTop="5dp" />

    </android.support.v7.widget.Toolbar>


    <ScrollView
            android:layout_width="0dp"
            android:background="@android:color/background_light"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:fillViewport="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/action_toolbar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1">

        <android.support.constraint.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:id="@+id/wrexagram_image"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/wrexagram_image_content_description"
                    app:srcCompat="@drawable/wrex_62"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:text="@string/placeholder_wrexagram_title"
                    android:layout_width="344dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wrexagram_title"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/wrexagram_image" />

            <View
                    app:layout_constraintRight_toLeftOf="@+id/right_guideline"
                    app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                    app:layout_constraintTop_toBottomOf="@+id/wrexagram_title"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_width="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:id="@+id/Line"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/left_guideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.05"
                    tools:layout_editor_absoluteY="86dp"
                    tools:layout_editor_absoluteX="33dp" />

            <android.support.constraint.Guideline
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/right_guideline"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.95"
                    tools:layout_editor_absoluteY="86dp"
                    tools:layout_editor_absoluteX="343dp" />

            <TextView
                    android:text="@string/large_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/wrexagram_body"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/Line"
                    app:layout_constraintRight_toLeftOf="@+id/right_guideline"
                    app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
                    app:layout_constraintHorizontal_bias="0.0" />


        </android.support.constraint.ConstraintLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>