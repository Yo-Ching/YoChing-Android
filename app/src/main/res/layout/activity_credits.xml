<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        tools:context="tech.redroma.yoching.activities.CreditsActivity"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/galaxy_background"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/galaxy_white_transparent"
    />

    <android.support.v7.widget.Toolbar
            android:background="@color/colorPrimary"
            android:elevation="10dp"
            android:id="@+id/yo_action_bar"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1">

        <TextView
                android:gravity="center_horizontal"
                android:id="@+id/yo_action_bar_title"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingTop="5dp"
                android:text="@string/credits_title"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
        />

    </android.support.v7.widget.Toolbar>

    <ScrollView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:paddingBottom="8dp"
            android:paddingTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yo_action_bar">

        <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/true_player_container"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/true_player"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_true_player"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/true_player_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_true_player_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/hugh_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/hugh"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_hugh"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/hugh_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_hugh_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/wellington_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/wellington"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_wellington"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/wellington_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_wellington_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/marc_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/marc"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_marc"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/marc_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_marc_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/brendan_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/brendan"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_brendan"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/brendan_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_brendan_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>


            <LinearLayout
                    android:background="@drawable/selectable_item_background"
                    android:clickable="true"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:id="@+id/maya_container"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp"
                    android:paddingEnd="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:orientation="vertical">

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/maya"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:layout_weight="0.9"
                            android:layout_width="wrap_content"
                            android:text="@string/credits_maya"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold"
                    />

                    <TextView
                            android:foregroundGravity="center_vertical"
                            android:gravity="center_vertical"
                            android:id="@+id/maya_description"
                            android:layout_gravity="clip_vertical"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:layout_width="match_parent"
                            android:text="@string/credits_maya_roles"
                            android:textColor="@color/white_alpha_75"
                            android:textSize="16sp"
                    />

                </LinearLayout>

                <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        app:srcCompat="@drawable/arrow_right"
                />

            </LinearLayout>

            <Space
                    android:layout_height="16dp"
                    android:layout_width="match_parent"
            />


        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
